<Controls:MetroWindow  x:Class="datadesign.addFix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:datadesign"
        mc:Ignorable="d"
        Title="报修信息" Height="300" Width="300"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        ShowMaxRestoreButton="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="报修内容" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="infoBox" HorizontalAlignment="Left" Height="153" Margin="73,56,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" Controls:TextBoxHelper.Watermark="请输入报修内容" Controls:TextBoxHelper.ClearTextButton="True"/>
        <Button x:Name="button" Content="确定" HorizontalAlignment="Left" Margin="86,221,0,0" VerticalAlignment="Top" Width="175" Style="{StaticResource AccentedSquareButtonStyle}" Click="button_Click" />
    </Grid>
</Controls:MetroWindow>
